//- Header
mixin header(menuList, menuButtons)
    header.header 
        ._container 
            .header__content 
                .header__logo 
                    img(src=require('../assets/img/toxin-logo.svg'), alt="Toxin Logo")
                .header__menu 
                    ul.header__menu-list 
                        each menuItem in menuList 
                            - var item = menuItem[0]
                            - var isItemCurrent = menuItem[1]
                            - var hasItemSubmenu = menuItem[2]
                            if isItemCurrent 
                                li.header__menu-item.header__menu-item_is-current= item
                            else
                                if hasItemSubmenu
                                    li.header__menu-item.header__menu-item_with-sub-menu= item
                                else
                                    li.header__menu-item= item
                    .header__menu-buttons
                        - var ghostButtonText = menuButtons[0]
                        - var normalButtonText = menuButtons[1]
                        +ghost-button(ghostButtonText)
                        +button(normalButtonText)
