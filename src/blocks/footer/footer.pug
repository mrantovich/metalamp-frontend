//- Footer

//- Navigation column inside footer. Has bold title.
mixin footer-nav(navColumnTitle, navItemList)
    .footer__nav-column
        .footer__nav-title.text.text_label= navColumnTitle 
        +nav(navItemList, true)

//- Section to subscribe inside footer.
mixin footer-subscription(subscriptionData)
    - var subscriptionTitle = subscriptionData.title 
    - var subscriptionCallToAction = subscriptionData.call
    .footer__subscription 
        .footer__subscription-title.text.text_label= subscriptionTitle 
        .footer__subscription-call.text= subscriptionCallToAction 
        form.footer__form(action="/some-action-here", method="GET")
            +subscription-field("Email")

//- Footer itself.
mixin footer(description, navigationData, subscriptionData, copyrightInfo, socialsData)
    footer.footer  
        .footer__content 
            .footer__body
                .container
                    .footer__about
                        .footer__logo 
                            img(src=require('../assets/img/toxin-logo.svg'), alt="Toxin Logo")
                        .footer__hotel.text= description
                    .footer__nav
                        each navigationSet in navigationData 
                            +footer-nav(navigationSet.navColumnTitle, navigationSet.navItemList)
                    +footer-subscription(subscriptionData)
            .footer__foot
                .container
                    .footer__foot-content
                        .footer__copy.text= copyrightInfo
                        .footer__socials
                            each socialsSet in socialsData 
                                - var socialItemIco = socialsSet.ico 
                                - var socialItemLink = socialsSet.link
                                a(href=socialItemLink, alt="Social Link").footer__socials-link
                                    img(src=socialItemIco, alt="Social Icon").footer__socials-ico
