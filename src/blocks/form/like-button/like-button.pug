mixin like-button(numLikes, state)
    if state 
        .like-button.like-button_is-highlighted
            .like-button__container
                img(src=require("../assets/img/like-button-selected.svg"), alt="Heart image", class="like-button__heart like-button__heart_is-highlighted")
                .like-button__counter= numLikes 
    else 
        .like-button
            .like-button__container
                img(src=require("../assets/img/like-button-not-selected.svg"), alt="Heart image", class="like-button__heart")
                .like-button__counter= numLikes 